//1. Buat 'num' yang berbentuk angka menjadi string agar dapat menggunakan indexnya
//2. Tetapkan angka pertama di index 0 dan angka kedua di index 1 sebagai 'max'
//3. Lakukan perulangan dengan batas panjang 'num' itu sendiri untuk mendapatkan 'maxBaru'
//4. Setiap terbentuk 'maxBaru' baru cek apakah angka tersebut lebih besar dari angka pada 'max' sebelumnya atau tidak
//5. Jika iya maka 'maxBaru' adalah 'max'
//5. Ulangi langkah 4 sampai selesai mengecek seluruh angka
//6. Selesai

function pasanganTerbesar(num) {
    var numBaru = ""
    numBaru = numBaru + num
    var max = numBaru[0] + numBaru[1]
    for (i = 1; i <= numBaru.length; i++) {
        var maxBaru = numBaru[i] + numBaru[i + 1]
        if (max <= maxBaru) {
            max = maxBaru
        } else {
        }
    } return max
}
console.log(pasanganTerbesar(641573));
console.log(pasanganTerbesar(12783456));
console.log(pasanganTerbesar(910233));
console.log(pasanganTerbesar(71856421));
console.log(pasanganTerbesar(79918293)); 